{
  "name": "grimoire",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:mock": "VITE_USE_MOCK_DATA=true vite",
    "build": "tsc -b && vite build",
    "build:analyze": "ANALYZE=true vite build",
    "build:profile": "tsc -b && vite build --mode production --profile",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:unit": "vitest run --coverage",
    "test:integration": "vitest run src/__tests__/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "pnpm lint && pnpm type-check && pnpm test:unit && pnpm test:e2e",
    "test:coverage": "vitest run --coverage",
    "test:related": "vitest related",
    "lint": "eslint src --ext .ts,.tsx --max-warnings=1000",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "type-check": "tsc --noEmit",
    "perf:build": "npm run build && npm run preview",
    "perf:analyze": "npm run build:analyze",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=dist",
    "deploy:cloudrun": "./scripts/deploy-cloudrun.sh"
  },
  "dependencies": {
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^9.0.0",
    "@react-three/postprocessing": "^3.0.4",
    "@types/diff-match-patch": "^1.0.36",
    "date-fns": "^4.1.0",
    "diff-match-patch": "^1.0.5",
    "dompurify": "^3.2.2",
    "firebase": "^12.5.0",
    "framer-motion": "^11.2.6",
    "lucide-react": "^0.555.0",
    "postprocessing": "^6.38.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-draggable": "^4.5.0",
    "react-masonry-css": "^1.0.16",
    "react-router-dom": "^7.9.5",
    "three": "^0.181.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.2.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.2.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "^4.0.8"
  }
}
